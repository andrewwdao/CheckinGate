#
# This is a project Makefile. It is assumed the directory this Makefile resides in is a
# project subdirectory.
#

CC=gcc

###############################################################################
# INCLUDES DIRECTION
###############################################################################
IDIR =     /                                                               \
###############################################################################
# INCLUDES DIRECTION
###############################################################################
# _PIR_DEPS =                                                               \
#             pir_wiegand.h                                                 \
# 												   						   \
# PIR_DEPS = $(patsubst %,$(IDIR)/%,$(_PIR_DEPS))
###############################################################################
# OBJECTS CREATED
###############################################################################
_PIR_OBJ =                                                             \
			pir.o                                                         \
            # pir_wiegand.o												   \
			
PIR_OBJ = $(patsubst %,$(ODIR)/%,$(_PIR_OBJ))
###############################################################################
# OBJECTS DIRECTORY
###############################################################################
ODIR=obj
###############################################################################
# LIBRARY DIRECTORY
###############################################################################
# LDIR =/lib
###############################################################################
# OUTSIDE LIBRARY INCLUDE
###############################################################################
LIBS =                                                                     \
  #          -l wiringPi                                                   \
###############################################################################
# DEFINES
###############################################################################
CFLAGS  = -l wiringPi -lpthread -lrt  -Wall -O2 -pipe -I$(IDIR)            \

# $(ODIR)/%.o: %.c $(PIR_DEPS)
# 	$(CC) -c -o $@ $< $(CFLAGS)

pir: $(PIR_OBJ)
	$(CC) -o $@ $^ $(CFLAGS) $(LIBS)

.PHONY: clean

clean:
	rm -f $(ODIR)/*.o *~ core $(INCDIR)/*~
	rm -rf pir

