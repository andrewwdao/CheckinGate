#
# This is a project Makefile. It is assumed the directory this Makefile resides in is a
# project subdirectory.
#

CC=gcc

###############################################################################
# INCLUDES DIRECTION
###############################################################################
IDIR =     /                                                               \
###############################################################################
# INCLUDES DIRECTION
###############################################################################
_UHF_DEPS =                                                               \
            uhf_rs232.h                                                 \
												   						   \
UHF_DEPS = $(patsubst %,$(IDIR)/%,$(_UHF_DEPS))
###############################################################################
# OBJECTS CREATED
###############################################################################
_UHF_OBJ =                                                             \
			uhf.o                                                         \
            uhf_rs232.o												   \
			
UHF_OBJ = $(patsubst %,$(ODIR)/%,$(_UHF_OBJ))
###############################################################################
# OBJECTS DIRECTORY
###############################################################################
ODIR=obj
###############################################################################
# LIBRARY DIRECTORY
###############################################################################
LDIR =/lib
###############################################################################
# OUTSIDE LIBRARY INCLUDE
###############################################################################
LIBS =                                                                     \
  #          -l wiringPi                                                   \
###############################################################################
# DEFINES
###############################################################################
CFLAGS  = -l wiringPi -lpthread -lrt  -Wall -O2 -pipe -I$(IDIR)            \

$(ODIR)/%.o: %.c $(UHF_DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

uhf: $(UHF_OBJ)
	$(CC) -o $@ $^ $(CFLAGS) $(LIBS)

.PHONY: clean

clean:
	rm -f $(ODIR)/*.o *~ core $(INCDIR)/*~
	rm -rf uhf

