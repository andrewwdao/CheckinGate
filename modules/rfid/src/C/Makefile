#
# This is a project Makefile. It is assumed the directory this Makefile resides in is a
# project subdirectory.
#

CC=gcc

###############################################################################
# INCLUDES DIRECTION
###############################################################################
IDIR =     /                                                               \
###############################################################################
# INCLUDES DIRECTION
###############################################################################
_RFID_DEPS =                                                               \
            rfid_wiegand.h                                                 \
												   						   \
RFID_DEPS = $(patsubst %,$(IDIR)/%,$(_RFID_DEPS))
###############################################################################
# OBJECTS CREATED
###############################################################################
_RFID_OBJ =                                                             \
			rfid.o                                                         \
            rfid_wiegand.o												   \
			
RFID_OBJ = $(patsubst %,$(ODIR)/%,$(_RFID_OBJ))
###############################################################################
# OBJECTS DIRECTORY
###############################################################################
ODIR=obj
###############################################################################
# LIBRARY DIRECTORY
###############################################################################
LDIR =/lib
###############################################################################
# OUTSIDE LIBRARY INCLUDE
###############################################################################
LIBS =                                                                     \
  #          -l wiringPi                                                   \
###############################################################################
# DEFINES
###############################################################################
CFLAGS  = -l wiringPi -lpthread -lrt  -Wall -O2 -pipe -I$(IDIR)            \

$(ODIR)/%.o: %.c $(RFID_DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

rfid: $(RFID_OBJ)
	$(CC) -o $@ $^ $(CFLAGS) $(LIBS)

.PHONY: clean

clean:
	rm -f $(ODIR)/*.o *~ core $(INCDIR)/*~
	rm -rf rfid

